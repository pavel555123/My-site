{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": [
    "./config/jest/setupTests.ts",
    "./config/jest/jestEmptyComponent.tsx",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./*.ts",
    "./config/**/*.ts",
    "./scripts/**/*.ts",
    "./cypress/**/*.ts",
    "./cypress/**/*.tsx",
  ]
}
